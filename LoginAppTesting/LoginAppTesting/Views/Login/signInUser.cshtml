@model SignInViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-5">

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Sign Up</h5>
            <form asp-action="signInUser" asp-controller="Login">
                <div asp-validation-summary=All class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" id="user" aria-describedby="user">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="password">
                    <span asp-validation-for="Password"  class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="RepeatPassword" class="form-label">Repeat Password</label>
                    <input asp-for="RepeatPassword" type="password" class="form-control" id="rpassword">
                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register Now</button>
            </form>
        </div>
    </div>
</div>